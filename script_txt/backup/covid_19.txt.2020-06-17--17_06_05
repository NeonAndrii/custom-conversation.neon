# [*] is required to use all elements of a list, otherwise only first element is used in substitution
if {covidUserRef} IN {userSelfRefsList[*]}:
    userref1 = "have you"
    userref2 = "are you"
    userref3 = "do you"
    userref1C = "Have you"
    userref2C = "Are you"
    userref3C = "Do you"
else:
